{
  "name": "unobservable",
  "version": "1.0.0",
  "description": "An incredibly lightweight version of TC39 Observable",
  "license": "MIT",
  "files": [
    "*.mjs",
    "*.ts",
    "*.js"
  ],
  "main": "all.js",
  "module": "all.mjs",
  "repository": "keithamus/mini-observable",
  "scripts": {
    "prepublish": "yarn lint & yarn test",
    "prepublishOnly": "yarn check-size",
    "prepare": "tsc -m es6 && renamer --find js --replace mjs --force *.js && tsc",
    "check-size": "terser -cm toplevel --ecma 8 observable.mjs | gzip -c | wc -c",
    "lint": "tslint *.ts test/*.ts",
    "pretest": "tsc -p test/tsconfig.json",
    "test": "mocha test/*.js"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "chai": "^4.2.0",
    "es-observable-tests": "^0.3.0",
    "mocha": "^6.0.2",
    "renamer": "^1.1.1",
    "terser": "^3.17.0",
    "ts-node": "^8.0.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  }
}
